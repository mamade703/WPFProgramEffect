<Window x:Class="WPFProgramEffect.Views.TransparentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProgramEffect.Views"
        mc:Ignorable="d" 
        
        AllowsTransparency="True" WindowStyle="None" BorderThickness="30" Background="White"
        
        Title="TransparentWindow" Height="450" Width="800">
    <Window.Effect>
        <!--和杨蕾核对，以后统一按这个来定义阴影部分-->
        <DropShadowEffect BlurRadius="40" Color="Black" Direction="315"  ShadowDepth="8" Opacity="0.15"/>
    </Window.Effect>
    <Grid>
        
    </Grid>
</Window>
